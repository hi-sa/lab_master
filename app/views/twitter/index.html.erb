<%= stylesheet_link_tag "inside/twitter", :media => "all" %>

<% #アソシエーションは使わず、joinで一度に取得するパターン %>
<% if false %>
  <%= @tweets_3rd.each do |tweet| %>
    <%= tweet.screen_name %>
    <%= tweet_2.tw_member.name %>
    <%= tweet.text %><br>
  <% end %>
<% end %>

<%# Twitter サブナビゲーション %>
<div class="navbar sub_nav">
  <div class='navbar-inner navbar-inner-org'>
    <ul class="nav">
      <li class="active_org"><%= link_to (raw(t "sub_nav.timeline")), twitter_index_path %></li>
      <li><%= link_to (raw(t "sub_nav.insight")), twitter_path(id="all") %></li>
      <li><%= link_to (raw(t "sub_nav.search")), "" %></li>
    </ul>
  </div><%# #icon-envelope %>
</div><%# #sub_nav %>

<%# tweet全てを囲うdiv %>
<div id='fluid_div' class='row-fluid'>
  <% i = 0 %>
  <% #3グループのみ出力する（とりあえず） %>
  <% 3.times do %>
    <%= render 'tweet_box', tweets: @tweets[i], num: i, main_group: @main_groups %>
    <% i += 1 %>
  <% end %>
</div>
