<%= stylesheet_link_tag "inside/facebook", :media => "all" %>
<%= javascript_include_tag "inside/facebook", :media => "all" %>
<%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1/jquery-ui.min.js", :media => "all" %>
<%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1/i18n/jquery.ui.datepicker-ja.min.js", :media => "all" %>

<%# Facebook サブナビゲーション %>
<div class="navbar sub_nav">
  <div class='navbar-inner navbar-inner-org'>
    <ul class='nav'>
      <li><%= link_to (raw(t 'sub_nav.feed')), facebook_index_path %></li>
      <!--<li><%#= link_to (raw(t 'sub_nav.insight')), facebook_path(id='all') %></li>-->
      <li><%= link_to (raw(t 'sub_nav.insight')), '#' %></li>
      <li class='dropdown active_org'>
        <a class="dropdown-toggle" id="dLabel" role="button" data-toggle="dropdown" data-target="#" href='#'><%= raw(t 'sub_nav.groups') %><span class="caret" style='vertical-align:baseline;'></span></a>
        <ul id='group_list' class="dropdown-menu" role="menu" aria-labelledby="dLabel">
          <% #NOTE 実際には、登録されたFBグループをeachで回す %>
          <li><%= link_to '尾澤研究室', '/facebook/group/226826110680052' %></li>
        </ul>
      </li>
      <li>
        <div class='input-append subnav_search'>
          <%= form_tag("/facebook/group/#{params[:group_id]}", method: 'GET') do %>
            <%= text_field_tag 'q', '', id: 'post_search', placeholder: 'Search...' %>
            <span class="add-on" style='margin-top:10px;margin-right:15px;'><i class='icon-search'></i></span>
          <% end %>
        </div>
      </li>
    </ul>
    <div id='typewriter' class='page_desc'>Facebookグループ「尾澤研究室」の投稿を振り返ることができるよ！ </div>
  </div><%# #icon-envelope %>
</div><%# #sub_nav %>
<div class='contents clearfix'>
  <!-- LEFT -->
  <%= render 'group_feed' %>
  <!-- RIGHT -->
  <%= render 'group_feed_insight' %>
</div>
<input type='hidden' id='gi' value='<%= params[:group_id] %>' />
