<% #TOPバー 移動式 %>
<div class="navbar navbar-inverse navbar-static-top">
  <div id="global_nav" class="navbar-inner">
    <div class="container">
      <%= link_to "Lab Master", root_path, class: "brand", id: "logo" %>
      <div class="nav-collapse collapse">
        <ul class="nav">
          <li><%= link_to (raw(t "nav.facebook")), facebook_index_path %></li>
          <li><%= link_to (raw(t "nav.twitter")), twitter_index_path %></li>
          <li><%= link_to (raw(t "nav.mail")), mail_index_path %></li>
          <li><%= link_to (raw(t "nav.file")), attachment_index_path %></li>
          <li><%= link_to (raw(t "nav.blog")), "#" %></li>
          <li><%= link_to (raw(t "nav.group")), group_index_path %></li>
        </ul>
        <ul class="nav pull-right" data-dropdown="dropdown"> 
          <!-- login -->
          <% if logged_in? %>
            <li class="dropdown" id="menu1">
              <a href="#menu1" class="dropdown-toggle" data-toggle="dropdown" data-target="#">
                <%= image_tag "#{current_user.image_url}", class: "topBarIcon", width:"30", height:"30" %>
                <%= raw(" #{current_user.screen_name} <b class='caret' style='vertical-align:baseline;'></b>") %>
              </a>
            <ul class="dropdown-menu">
              <li>
              <%= link_to 'logout', logout_path %>
              </li>
            </ul>
            </li>
          <% else %>
            <!-- 未ログイン -->
            <li> 
            <%= link_to "ログイン", "auth/twitter" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
<% if false %>
  <% if fb_logged_in? -%>
    <%= link_to 'logout', logout_path %>
  <% else %>
    <%= link_to "Facebookでログイン", "auth/facebook" %>
  <% end %>
<% end %>
