body {
  background:url(<%= image_path "bg.png" %>);
}

 /* Header _header.html.erb
------------------------------- */

#global_nav {
  background: #333333 !important;
  border-bottom: 3px solid #0071FF !important;
  padding: 8px 0 8px 0;
}

#logo {
  font-weight:bold;
  font-size:250%;
  color: #fff;
}

div#global_nav a:hover {
  color: #0071FF !important;
}

.topBarIcon {
  border: 1px solid #ddd;
}



 /* Footer _footer.html.erb
------------------------------- */
div#footer{
  margin-top:30px;
  border-top: 1px solid #ccc;  
  color: #fff;
}


 /* layouts/twitter.html.erb
------------------------------- */
#main_contents {
  margin-top: 50px;
}

#wrapper {
  background: #DEDEDE;
  border-radius: 6px;
  overflow: hidden;
}

#wrapper div.size4{
  padding: 0 10px;
}

#wrapper .nav-tabs {
  margin-left: 10px;
}


/* アプリ全体共通
---------------------------------------*/

/* 太字 */
.bold {
  font-weight: bold;
}

/* 大きい文字 */
.big_text{
  font-size: 150%;
}

/* 40px四方の画像サイズ */
.image_40 {
  height: 40px;
  width: 40px;
  border-radius: 3px;
}

/* 中央揃えのテキスト */
.center_text {
  text-align: center;
}

/* 右端揃えのテキスト */
.right_text {
  text-align: right;
}

.text_green {
  color: #00d800;
}

.text_orange {
  color: #ffa500;
}

.text_yellow {
  color: #e6e600;
}
