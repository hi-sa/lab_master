 /* Header _header.html.erb
------------------------------- */

.topBarIcon {
  border: 1px solid #ddd;
  margin-right: 3px;
}

div#header {
  width: 100%;
  background: #ddd;
  border-bottom: 2px solid #0071FF !important;
  background: #333333;
}

div#header_inner {
  width: 1200px;
  margin: 0 auto;
  padding: 8px 0;
}

div#logo {
  width: 190px;
  height: 42px;
  float: left;
  line-height: 1;
}

div#logo a {
  float: left;
  font-weight:bold;
  font-size:250%;
  color: #fff;
}

div#contents_menu {
  float: left;
}

div#contents_menu ul, div#user_menu ul {
  list-style: none;
}

div#contents_menu li {
  float: left;
  height: 42px;
  margin-left: 23px;
  line-height: 3;
  font-size: 95%;
}

div#logo a:hover, div#contents_menu li a:hover {
  text-decoration: none;
}

div#contents_menu li a:hover {
  color: #0071FF;
}

a.nav_item {
  color: #ccc;
}

div#user_menu {
  float: right;
}

div#user_menu li {
  line-height: 1.8;
}

div#navigation_menu {
  width: 995px;
  float: left;
}

ul#user_menu_list {
  min-width:120px;
  background-color: #000;
  opacity: 0.9;
}

ul#user_menu_list a {
  color: #fff;
}

#login_link {
  line-height: 3;
}



 /* Footer _footer.html.erb
------------------------------- */
div#footer{
  margin-top:30px;
  border-top: 1px solid #ccc;  
  color: #fff;
}


 /* コンテンツの大枠 
------------------------------- */
div#app_container {
  width: 100%;
}

#main_contents {
  width: 1200px;
  margin: 50px auto 0;
}

/*new*/
div.contents {
  width: 1170px;
  padding: 25px 15px;
  background-color: #fff;
  border-bottom-left-radius: 6px;
  border-bottom-right-radius: 6px;
  overflow: hidden;
}

